{
    "branches": [
        "master"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "major",
                        "release": "major"
                    },
                    {
                        "type": "deps",
                        "scope": "major",
                        "release": "major"
                    },
                    {
                        "type": "minor",
                        "release": "minor"
                    },
                    {
                        "type": "deps",
                        "scope": "minor",
                        "release": "minor"
                    },
                    {
                        "type": "patch",
                        "release": "patch"
                    },
                    {
                        "type": "deps",
                        "scope": "patch",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "minor"
                    },
                    {
                        "scope": "docs",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "major",
                            "section": "Features"
                        },
                        {
                            "type": "minor",
                            "section": "Features"
                        },
                        {
                            "type": "patch",
                            "section": "Bugfixes"
                        },
                        {
                            "type": "feat",
                            "section": "Features"
                        },
                        {
                            "type": "fix",
                            "section": "Bugfixes"
                        },
                        {
                            "type": "deps",
                            "section": "Dependencies"
                        },
                        {
                            "type": "chore",
                            "section": "Miscellaneous",
                            "hidden": false
                        },
                        {
                            "type": "docs",
                            "hidden": true
                        },
                        {
                            "type": "refactor",
                            "hidden": true
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogTitle": "# Changelog"
            }
        ],
        [
            "semantic-release-replace-plugin",
            {
                "replacements": [
                    {
                        "files": [
                            "config/manager/kustomization.yaml"
                        ],
                        "from": "newTag: .*",
                        "to": "newTag: ${nextRelease.version}",
                        "results": [
                            {
                                "file": "config/manager/kustomization.yaml",
                                "hasChanged": true,
                                "numMatches": 1,
                                "numReplacements": 1
                            }
                        ],
                        "countMatches": true
                    }
                ]
            }
        ],
        [
            "semantic-release-helm3",
            {
                "chartPath": "chart",
                "registry": "ghcr.io/kubehippie/charts",
                "populateChangelog": false
            }
        ],
        [
            "@semantic-release/git",
            {
                "message": "chore: release ${nextRelease.version}",
                "assets": [
                    "CHANGELOG.md",
                    ".github/RELEASE",
                    "chart/Chart.yaml",
                    "config/manager/kustomization.yaml"
                ]
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": []
            }
        ]
    ]
}
